<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="127dp">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="14.4dp"
            android:layout_marginTop="14.4dp"
            android:layout_marginRight="33.6dp"
            android:layout_marginBottom="33.6dp"
            android:src="@drawable/ic_circle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="79.2dp"
            android:layout_marginTop="79.2dp"
            android:layout_marginRight="16.8dp"
            android:layout_marginBottom="16.8dp"
            android:src="@drawable/ic_dot" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="204dp"
        android:layout_marginRight="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginRight="110dp"
            android:gravity="top"
            android:paddingLeft="8dp"
            android:text="@string/login_to_your_account"
            android:textColor="#2E2E5D"
            android:textSize="50px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/input_login_page"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="5dp"
            android:hint="Email"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="109dp"
            android:background="@drawable/input_login_page"
            android:drawableLeft="@drawable/ic_pass"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <CheckBox
            android:layout_width="137dp"
            android:layout_height="21dp"
            android:layout_marginTop="175dp"
            android:text="Remember me"
            android:textColor="#2E2E5D" />

        <Button
            android:id="@+id/login"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_marginTop="215dp"
            android:background="@drawable/btn_design"
            android:text="Login" />

        <TextView
            android:id="@+id/forget_pass"
            android:layout_width="129dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="162dp"
            android:layout_marginTop="291dp"
            android:text="Forget Password?"
            android:textColor="#F77A55"
            android:clickable="true"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="87dp"
        android:layout_height="21dp"
        android:layout_marginLeft="144dp"
        android:layout_marginRight="144dp"
        android:text="Or login with"
        android:textColor="#2E2E5D"
        android:textSize="14sp"
        android:layout_marginTop="552dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="593dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="42dp"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="87dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_google"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="87dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_facebook"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="87dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_twitter"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="673dp"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="70dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="174dp"
            android:layout_height="21dp"
            android:textSize="40px"
            android:textColor="#2E2E5D"
            android:text="Don't have an account?"/>

        <TextView
            android:id="@+id/register"
            android:layout_width="59dp"
            android:layout_height="21dp"
            android:text="Register"
            android:textStyle="bold"
            android:clickable="true"
            android:textColor="#F77A55" />
    </LinearLayout>
</RelativeLayout>