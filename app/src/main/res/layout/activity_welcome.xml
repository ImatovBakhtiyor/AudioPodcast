<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirmation">

    <View
        android:id="@+id/ellipse_16_"
        android:layout_width="wrap_content"
        android:layout_height="177dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="166dp"
        android:layout_marginBottom="553dp"
        android:background="@drawable/ic_ellipse16" />

    <View
        android:id="@+id/ellipse_17"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="312dp"
        android:layout_marginTop="82dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="501dp"
        android:background="@drawable/ic_ellipse17" />


    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="420dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="204dp"
        android:layout_marginRight="48dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:paddingRight="131dp"
            android:text="Welcome!"
            android:textColor="#F77A55"
            android:textSize="50px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="174dp"
            android:textColor="#4838D1"
            android:lineSpacingExtra="0sp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/find_what_y"
            android:textSize="120px" />

        <TextView
            android:layout_width="279dp"
            android:layout_height="42dp"
            android:lineSpacingExtra="0sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:text="@string/by_personal"
            android:textSize="40px" />


        <Button
            android:id="@+id/personalize_btn"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_design"
            android:text="Personalize Your Account" />

        <Button
            android:id="@+id/skipBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_cancel_design"
            android:text="Skip"
            android:textColor="#4838D1" />
    </LinearLayout>
</RelativeLayout>